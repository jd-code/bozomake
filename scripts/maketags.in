#!/bin/sh
#
# scans some completely arbitrary list of files in order to build a global+local ctags file
#
# $Id$
#
# Bozomake - (c) 2002-2003-2004 Jean-Daniel Pauget
# Bozomake helps building, cross-buildings and so on on multiple hosts/targets...

LISTE_ADDON="/usr/include/matcalc /usr/include/grapefruit /usr/include/caroube"
LISTE_ADDON="/usr/local/include/matcalc /usr/local/include/grapefruit /usr/local/include/caroube ${LISTE_ADDON}"


if [ "${1}" = "--version" ]
then
    echo "Bozomake's maketags version @VERSION@ - "'$Id$'
    echo "Bozomake @VERSION@ - (c) 2002-2003-2004 Jean-Daniel Pauget"
    echo
    exit 0
fi

echo -n "scanning..."
LISTEDIR=""
for DIR in ${LISTE_ADDON}
do
    if [ -e "${DIR}" ]
    then
	LISTEDIR="${DIR} ${LISTEDIR}"
    fi
done

if [ "${BUILD_CTAGS}" ]
then
    echo -n " ctags..."
    ctags --C-types=+p `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    ctags --C-types=+p -a `find ${LISTEDIR} ~/bzoums/grapefruit/src ~/bzoums/grapefruit/src '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`

    echo -n " extracting types..."
    (
	(	cat tags | rev | cut -f1 | rev | grep class | rev | cut -d':' -f1 | rev | sort -u ) 2> /dev/null
	cut -f1,3 tags | grep class | cut -f1 | sort -u
	cut -f1,3 tags | grep namespace | cut -f1 | sort -u
	grep typedef tags | cut -f 1
    ) | sort -u |
    (
	echo -n 'syntax keyword Function '
	while read NOM
	do
	    echo -n "${NOM} "
	done
	echo
    ) > types.vim
fi

if [ "${BUILD_ETAGS}" ]
then
    echo -n " etags..."
    etags --C-types=+p `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    etags --C-types=+p -a `find ${LISTEDIR} ~/bzoums/grapefruit/src ~/bzoums/grapefruit/src '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
fi

if [ "${BUILD_EBROWSE}" ]
then
    echo -n " ebrowse..."
    ebrowse `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    ebrowse -a `find ${LISTEDIR} ~/bzoums/grapefruit/src ~/bzoums/grapefruit/src '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.cc" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
fi

echo " done."

