### JDJDJDJD this should never had been here !
### LISTE_ADDON="/usr/include/matcalc /usr/include/grapefruit /usr/include/caroube ${TAGS_LISTE_ADDON}"
### LISTE_ADDON="/usr/local/include/matcalc /usr/local/include/grapefruit /usr/local/include/caroube ${LISTE_ADDON}"


if [ "${1}" = "--version" ]
then
    echo "Bozomake's maketags version @VERSION@ - "'$Id$'
    echo "Bozomake @VERSION@ - (c) 2002-2003-2004 Jean-Daniel Pauget"
    echo
    exit 0
fi

echo -n "scanning..."
if [ -f .tagdirs ]
then
    LISTEDIR=`cat .tagdirs`
else
    LISTEDIR=""
fi
for DIR in ${LISTE_ADDON}
do
    if [ -e "${DIR}" ]
    then
	LISTEDIR="${DIR} ${LISTEDIR}"
    fi
done

if [ "${BUILD_CTAGS}" ]
then
    echo -n " ctags..."
    (
	find .													    \
		'(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')'   \
		'(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'
	find ${LISTEDIR} \
		'(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')'   \
		'(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'
    ) |
    ctags --langmap=C++:+.hcpp --extra=+q --C-types=+p -L -
#    ctags --C-types=+p -L -

    # ctags --C-types=+p `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    # ctags --C-types=+p -a `find ${LISTEDIR} '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`

    echo -n " extracting types..."
    (
	(	cat tags | brev | cut -f1 | brev | grep class | brev | cut -d':' -f1 | brev | sort -u ) 2> /dev/null
	cut -f1,3 tags | grep class | cut -f1 | sort -u
	cut -f1,3 tags | grep namespace | cut -f1 | sort -u
	grep typedef tags | cut -f 1
    ) | sort -u |
    (
	echo -n 'syntax keyword Function '
	while read NOM
	do
	    echo -n "${NOM} "
	done
	echo
    ) > types.vim
fi

if [ "${BUILD_ETAGS}" ]
then
    echo -n " etags..."
    (
	find .													    \
		'(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')'   \
		'(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'
	find ${LISTEDIR}
		'(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')'   \
		'(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'
    ) | etags --langmap=C++:+.hcpp --C-types=+p
    # etags --C-types=+p `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    # etags --C-types=+p -a `find ${LISTEDIR} '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
fi

if [ "${BUILD_EBROWSE}" ]
then
    echo -n " ebrowse..."
    ebrowse `find . '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
    ebrowse -a `find ${LISTEDIR} '(' -name "*.c" -o -name "*.h" -o -name "*.cpp" -o -name "*.H" -o -name "*.C" -o -name "*.hcpp" ')' '(' -not -path '*/.svn/*' -not -path '*/CVS/*' ')'`
fi

echo " done."

